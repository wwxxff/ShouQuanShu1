<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="云丽信息上传系统"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">
        <TextView
            android:text="登陆"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="107dp"
            android:id="@+id/textView2" />

        <TextView
            android:padding="10dp"
            android:text="手机号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/editText_Log_name"
            android:layout_alignStart="@+id/editText_Log_name"
            android:id="@+id/editText_Log_code"
            android:hint="请输入验证码"
            android:layout_toStartOf="@+id/button_getLog"
            android:layout_alignEnd="@+id/editText_Log_name" />

        <TextView
            android:padding="10dp"
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/editText_Log_code"
            android:layout_alignParentStart="true" />

        <Button
            android:text="获取验证码"
            android:background="#04f130"
            android:textColor="#fff"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_getLog"
            android:layout_marginEnd="14dp"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_Log_name"
            android:hint="请输入手机号"
            android:layout_alignBottom="@+id/textView3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
    android:padding="20dp"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp">
    <Button
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_Log"
        android:background="#04f130"
        android:textColor="#fff" />
</RelativeLayout>

</RelativeLayout>
